{% layout 'layout.liquid' %}

{% block content %}
<div>
    <h2 class="display-6">All Fruits</h2>
    <div class="row">

        {% for fruit in fruits %}
            <div class="card" style="width: 18rem">
                <h5 class="card-header">{{fruit.name}}</h5>
                <div class="card-body">
                    <h6 class="card-title">
                        {% if fruit.readyToEat %}
                            Ripe
                        {% else %}
                            Not Ripe
                        {% endif %}
                    </h6>
                    <p class="card-text">
                        The color of this {{fruit.name}} is {{fruit.color}}
                    </p>
                    
                    <a href="/fruits/{{fruit._id}}" class="btn btn-info">View {{fruit.name}}</a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}